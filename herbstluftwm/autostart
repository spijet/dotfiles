#!/usr/bin/env bash

#:'##::::'##:'##:::::::'##:::::'##:'##::::'##:
#: ##:::: ##: ##::::::: ##:'##: ##: ###::'###:
#: ##:::: ##: ##::::::: ##: ##: ##: ####'####:
#: #########: ##::::::: ##: ##: ##: ## ### ##:
#: ##.... ##: ##::::::: ##: ##: ##: ##. #: ##:
#: ##:::: ##: ##::::::: ##: ##: ##: ##:.:: ##:
#: ##:::: ##: ########:. ###. ###:: ##:::: ##:
#:..:::::..::........:::...::...:::..:::::..::

## Load config file:
CFGDIR="${XDG_CONFIG_HOME:-$HOME/.config}/herbstluftwm"
. "${CFGDIR}/global.conf"

hc emit_hook reload

## Laptop additions:
if [[ "${PEKO}" = "laptop-home" ]]; then
    # Set screen refresh rate.
    xrandr -r 48 &
    #
    # Set Intel backlight PWM rate.
    # See helper code for details.
    "${HLPDIR}/pwmfreq" fix &
    #
    # Add user-fonts to XFLD.
    xset +fp /home/spijet/.fonts
    # Rehash fontdirs.
    xset fp rehash
fi

## Set the wallpaper(s):
if type nitrogen 2>/dev/null ; then
	nitrogen --restore &
else
	~/.fehbg &
fi

# Remove default tag (merge into first)
hc rename default "${tag_names[0]}"

# Populate tag keybinds:
for i in ${!tag_names[@]} ; do
    hc add "${tag_names[$i]}"
done

## Load keybinds:
. "${CFGDIR}/keybinds.conf"

## Load theme config:
. "${CFGDIR}/theme.conf"

##  Load HLWM rules:
. "${CFGDIR}/rules.conf"

# unlock, just to be sure
hc unlock

herbstclient set tree_style "${TREE_STYLE}"

# Do multi monitor setup:
hc detect_monitors

# Send the commandchain to hlwm in one command,
# because we're fast!
# (No quoting here because args should be separated, IIRC)
herbstclient $cmds &

#   Load the savestate:
[[ -f "${SAVESTATE}" ]] && "${HLPDIR}/loadstate" "${SAVESTATE}"

## Prepare panel:
#  (no quoting here since I want to expand one sting to N monitors)
MONITORS=( $(herbstclient list_monitors | cut -d: -f1) )
#  Create FIFO dir if it doesn't exist:
[[ -d "${FIFO_DIR}" ]] || mkdir -p "${FIFO_DIR}"
#  Kill any herbstclient running before us:
pkill -cxf 'herbstclient --idle'
#  Create event pipe and start herbstclient idle loop:
RAW_FIFO="${EVENTS_FIFO}.raw"
[[ -e "${RAW_FIFO}" ]] && rm "${RAW_FIFO}"
mkfifo -m600 "${RAW_FIFO}"
herbstclient --idle > "${RAW_FIFO}" 2>/dev/null &
#  Create panel pipes:
FIFOS=""
for monitor in ${MONITORS[@]} ; do
    _FIFO="${PANEL_FIFO}.${monitor}"
    [[ -e "${_FIFO}" ]] && rm "${_FIFO}"
    mkfifo -m600 "${_FIFO}"
    FIFOS+="${_FIFO} "
done
## Fill them with data from herbstclient:
#  (no quoting here since I want to expand one sting to N monitors)
#  I also pipe the event list via awk to get rid of identical events (like
#  redundant conky updates).
if [ "${#MONITORS[@]}" -gt "1" ]; then
    $AWK '$0 != l { print ; l=$0 ; fflush(); }' ${RAW_FIFO} | tee $FIFOS &
else # No need for `tee` for one monitor.
    $AWK '$0 != l { print ; l=$0 ; fflush(); }'  ${RAW_FIFO} > $FIFOS &
fi

[[ -x "$PANEL" ]] || PANEL="/etc/xdg/herbstluftwm/panel.sh"
for monitor in ${MONITORS[@]} ; do
    # start it on each monitor
    "$PANEL" "$monitor" &
done

# New hlwm function that allows making cleaner version of run_once.
if herbstclient silent new_attr bool my_not_first_autostart ; then
    compton &
    kbdd &
fi
[[ "${PEKO}" = "laptop"* ]] && "${HLPDIR}/tray" &
type conky >/dev/null 2>&1 && "${HLPDIR}/hc-conky" &
"${HLPDIR}/xkbmon" &

## Fork all running processes away and die peacefully:
disown
