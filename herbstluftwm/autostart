#!/usr/bin/env bash
#:'##::::'##:'##:::::::'##:::::'##:'##::::'##:
#: ##:::: ##: ##::::::: ##:'##: ##: ###::'###:
#: ##:::: ##: ##::::::: ##: ##: ##: ####'####:
#: #########: ##::::::: ##: ##: ##: ## ### ##:
#: ##.... ##: ##::::::: ##: ##: ##: ##. #: ##:
#: ##:::: ##: ##::::::: ##: ##: ##: ##:.:: ##:
#: ##:::: ##: ########:. ###. ###:: ##:::: ##:
#:..:::::..::........:::...::...:::..:::::..::
# export HLWM_DEBUG=true

## Write debug log if needed:
if [[ "${HLWM_DEBUG}" = "true" ]]; then
    set -x
    exec > "/tmp/hlwm-$(whoami)-wm.log" 2>&1
fi

## Load config file and emit 'reload' hook:
CFGDIR="${XDG_CONFIG_HOME:-$HOME/.config}/herbstluftwm"
. "${CFGDIR}/global.conf"
hc emit_hook reload

## Laptop additions:
if [[ "${PEKO}" = "laptop-home" ]]; then
    # Set screen refresh rate.
    # xrandr -r 48 &
    # Set Intel backlight PWM rate.
    # See helper code for details.
    # "${HLPDIR}/pwmfreq" fix &
    # Add user-fonts to XFLD and rehash fontdirs:
    xset +fp /home/spijet/.fonts
    xset fp rehash
fi

## Set the wallpaper(s):
type nitrogen &>/dev/null && nitrogen --restore

##  Set up tags:
#   First, add all configured tags:
for i in ${!tag_names[@]} ; do
    hc add "${tag_names[$i]}"
done
#   Then switch to the first tag and merge it with 'default' one:
hc use "${tag_names[0]}"
hc merge_tag default "${tag_names[0]}"
#   Commit the changes:
hcc

##  Load theme, keybinds and rules:
for CONFIG in "theme.conf" "keybinds.conf" "rules.conf"; do
    . "${CFGDIR}/${CONFIG}"
    hcc
done

# Unlock, just to be sure:
hc unlock
herbstclient set tree_style "${TREE_STYLE}"
# Do multi monitor setup:
herbstclient detect_monitors

# Send the commandchain to hlwm in one command and load the savestate:
hcc
[[ -f "${SAVESTATE}" ]] && "${HLPDIR}/loadstate" "${SAVESTATE}"

## Prepare panel script:
#  Create FIFO dir and pipes:
[[ -d "${FIFO_DIR}" ]] || mkdir -p "${FIFO_DIR}"
make_fifo "${EVENTS_FIFO}" "${PANEL_FIFO}"
#  Kill any herbstclient running before us:
pkill -cxf 'herbstclient --idle'
#  Same for bapa:
pkill -f 'bapa.*herbstluftwm'

#  Fill the monitor list (for panel script):
#  (no quoting here since I want to expand one sting to N monitors)
MONITORS=( $(herbstclient list_monitors | cut -d: -f1) )
for monitor in ${MONITORS[@]} ; do
    baropts+=("-m $monitor")
done

## Fill them with data from herbstclient:
#  I also pipe the event list via awk to get rid of identical events (like
#  redundant conky updates).
herbstclient --idle > "${EVENTS_FIFO}" 2>/dev/null &
$HOME/bin/bapa "${BAT#BAT}" > "${EVENTS_FIFO}" 2>/dev/null &
$AWK '$0 != l { print ; l=$0 ; fflush(); }' ${EVENTS_FIFO} > "${PANEL_FIFO}" &

[[ -x "$PANEL" ]] || PANEL="/etc/xdg/herbstluftwm/panel.sh"
"$PANEL" ${baropts[@]} &

# New hlwm function that allows making cleaner version of run_once.
if herbstclient silent new_attr bool my_not_first_autostart ; then
    compton -b
    # kbdd
    /usr/bin/perWindowLayoutD &
    xsettingsd &
fi
"${HLPDIR}/tray" &
type conky &>/dev/null && "${HLPDIR}/hc-conky" &

## Fork all running processes away and die peacefully:
disown
