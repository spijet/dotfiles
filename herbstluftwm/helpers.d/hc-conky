#!/usr/bin/env bash

## Load config file:
CFGDIR="${XDG_CONFIG_HOME:-$HOME/.config}/herbstluftwm"
. "${CFGDIR}/global.conf"

## Load Conky config:
CONKY_CFG="$(ruby ${CFGDIR}/conkyrc.rb)"

## Kill any other conky instances:
pkill conky

## Run Conky:
conky -c - <<< "${CONKY_CFG}" > "${EVENTS_FIFO}.raw" &
disown
