#!/usr/bin/env zsh

# Set up BASEDIR (in case $ZDOTDIR is unset)
BASEDIR="${ZDOTDIR:-$HOME/.config/zsh}"
# Set Antidote config options:
zstyle ':antidote:bundle' file "${BASEDIR}/zsh-plugins.lst"
zstyle ':antidote:bundle' use-friendly-names 'yes'
zstyle ':antidote:static' file "${BASEDIR}/zsh-plugins.zsh"
