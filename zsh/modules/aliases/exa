#!/usr/bin/env zsh
if type eza &>/dev/null ; then
    alias ls='eza --group-directories-first --time-style=long-iso -F --color=auto'
    alias ll='eza --group-directories-first --time-style=long-iso -Fgl --color=auto'
    alias la='eza --group-directories-first --time-style=long-iso -Fgal --color=auto'
    alias ltree='eza --group-directories-first -FThl --git --color=auto'
    alias tree='eza --group-directories-first -FT --color=auto'
elif type exa &>/dev/null ; then
    alias ls='exa --group-directories-first --time-style=long-iso -F --color=auto'
    alias ll='exa --group-directories-first --time-style=long-iso -Fgl --color=auto'
    alias la='exa --group-directories-first --time-style=long-iso -Fgal --color=auto'
    alias ltree='exa --group-directories-first -FThl --git --color=auto'
    alias tree='exa --group-directories-first -FT --color=auto'
else
    alias ls='ls --group-directories-first --time-style=+"%d.%m.%Y %H:%M" --color=auto -F'
    alias ll='ls -l --group-directories-first --time-style=+"%d.%m.%Y %H:%M" --color=auto -F'
    alias la='ls -la --group-directories-first --time-style=+"%d.%m.%Y %H:%M" --color=auto -F'
fi
